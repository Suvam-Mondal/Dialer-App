<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shuvo.dialerappv2.MainActivity"
    android:background="#FFFFFF">


    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="10dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:src="@android:drawable/ic_dialog_dialer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="1"
            android:textSize="30dp"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="2"
            android:textSize="30dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="3"
            android:textSize="30dp"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_toEndOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="4"
            android:textSize="30dp"
            android:layout_below="@+id/button2"
            android:layout_alignStart="@+id/button" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:background="@drawable/mybutton"
            android:text="5"
            android:textSize="30dp"
            android:layout_alignTop="@+id/button4"
            android:layout_alignBottom="@+id/button4" />

        <Button
            android:id="@+id/button6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="6"
            android:textSize="30dp"
            android:layout_below="@+id/button3"
            android:layout_toEndOf="@+id/button5" />

        <Button
            android:id="@+id/button7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="7"
            android:textSize="30dp"
            android:layout_below="@+id/button4"
            android:layout_alignStart="@+id/button4" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="8"
            android:textSize="30dp"
            android:layout_alignBaseline="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="9"
            android:textSize="30dp"
            android:layout_alignBaseline="@+id/button8"
            android:layout_alignBottom="@+id/button8"
            android:layout_toEndOf="@+id/button8" />

        <Button
            android:id="@+id/buttonStar"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="*"
            android:textSize="30dp"
            android:layout_below="@+id/button9"
            android:layout_toStartOf="@+id/button0" />

        <Button
            android:id="@+id/button0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@+id/buttonStar"
            android:layout_alignBottom="@+id/buttonStar"
            android:layout_alignLeft="@+id/button8"
            android:layout_alignStart="@+id/button8"
            android:background="@drawable/mybutton"
            android:text="0\n+"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonHash"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/mybutton"
            android:text="#"
            android:textSize="30dp"
            android:layout_alignBaseline="@+id/button0"
            android:layout_alignBottom="@+id/button0"
            android:layout_toEndOf="@+id/button0" />

        <Button
            android:id="@+id/buttonCall"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/unnamed"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button0"
            android:layout_centerHorizontal="true" />

        <EditText

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonDel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="X" />
    </RelativeLayout>


</RelativeLayout>
