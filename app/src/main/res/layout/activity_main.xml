<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"

    tools:context="com.example.shuvo.dialerapp.MainActivity">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="1"
        android:background="@drawable/mybutton"
        android:id="@+id/button"
        android:textSize="30dp"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="2"
        android:id="@+id/button2"
        android:textSize="30dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="3"
        android:id="@+id/button3"
        android:textSize="30dp"
        android:layout_above="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="4"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="5"
        android:id="@+id/button5"
        android:textSize="30dp"
        android:layout_below="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="6"
        android:id="@+id/button6"
        android:textSize="30dp"
        android:layout_above="@+id/button9"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="7"
        android:id="@+id/button7"
        android:textSize="30dp"
        android:layout_above="@+id/buttonStar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="8"
        android:id="@+id/button8"
        android:textSize="30dp"
        android:layout_alignTop="@+id/button9"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="9"
        android:id="@+id/button9"
        android:layout_above="@+id/buttonStar"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="*"
        android:id="@+id/buttonStar"
        android:textSize="30dp"
        android:layout_alignTop="@+id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="0"
        android:id="@+id/button0"
        android:textSize="30dp"
        android:layout_alignTop="@+id/buttonHash"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:text="#"
        android:id="@+id/buttonHash"
        android:textSize="30dp"
        android:layout_above="@+id/buttonCall"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonCall"
        android:background="@drawable/unnamed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText

        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_marginTop="100dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="X"
        android:id="@+id/buttonDel"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />
</RelativeLayout>
